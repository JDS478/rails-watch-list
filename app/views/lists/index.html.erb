<div class="container index-body text-center">
  <div class="text-center d-flex flex-column jutify-content-center">
    <h1>Your Lists</h1>

    <% @lists.each do |list| %>
    <div class="list-card rounded-pill" style="background-position: center; background-repeat: no-repeat; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
      <%= link_to list.name, list_path(list.id), class: "text-decoration-none btn btn-outline-secondary text-white" %>
    </div>
    <br>
    <% end %>

  </div>
    <%= link_to 'Create New List', new_list_path, class: "btn btn-primary rounded-pill" %>
</div>
