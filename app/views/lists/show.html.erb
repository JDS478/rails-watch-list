<body style="background-position: center; background-repeat: no-repeat; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, crop: :fill, :opacity=>50 %>')">

  <div class="page-container text-center">
    <%# <div class="test-dev">soLDKJVN</div> %>
    <div class="header-cont">
      <h1 class="list-title"><%= @list.name %></h1>
    </div>
    <div class="card-product-cont">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product">
          <div class="card-image">
            <img src="https://image.tmdb.org/t/p/w500/<%= bookmark.movie.poster_url %>" alt="Poster" height="220" width="140">
          </div>
          <br>
          <div class="card-product-infos d-flex flex-column justify-content-center">
            <h2><%= bookmark.movie.title %></h2>
            <br>
            <div class="movie-desc">
              <%= bookmark.movie.overview %>
            </div>
            <br>
            <p class="bg-light rounded comment-p"><%= bookmark.comment %></p>
          </div>
            <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger m-1 rounded-pill" %>
        </div>
      <% end %>
    </div>
    <div class="mt-5 user-opt p-5">
      <%= link_to 'Create Bookmark', new_list_bookmark_path(params[:id]), class: "btn btn-primary rounded-pill" %>
      <%= link_to 'Go Back', lists_path, class: "btn btn-primary rounded-pill" %>
    </div>
  </div>
</body>
